<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="actionMenuTextColor">@color/green_a400</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EditTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_margin">16sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>


</resources>