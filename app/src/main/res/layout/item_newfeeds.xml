<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvNewsFeed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10sp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/bg_newsfeed"
        android:layout_width="130sp"
        android:layout_height="180sp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_newsfeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/background" />

        <TextView
            android:id="@+id/tv_name_newfeeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:text="Thêm Tin Mới"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_name_newfeeds"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10sp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatting_newsfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_add_24"
                app:fabCustomSize="40sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_owner"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/ic_baseline_query_stats_24"
                app:civ_border_color="@color/white"
                app:civ_border_width="2sp" />

        </FrameLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>